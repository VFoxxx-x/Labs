<Page x:Class="WpfApp9.Page1"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WpfApp9"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Личные Данные">

    <StackPanel Margin="20">
        <TextBlock Text="Имя" Margin="0,10" />
        <TextBox Name="FirstName" Margin="0,0,0,10" />

        <TextBlock Text="Фамилия" />
        <TextBox Name="LastName" Margin="0,0,0,10" />

        <TextBlock Text="Дата рождения" />
        <DatePicker Name="BirthDate" Margin="0,0,0,20" />

        <Button Content="Далее" Click="NextPage" />
    </StackPanel>
</Page>
