<Page x:Class="WpfApp9.Page3"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WpfApp9"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Адрес">

    <StackPanel Margin="20">
        <TextBlock Text="Город" Margin="0,10" />
        <TextBox Name="City" Margin="0,0,0,10" />

        <TextBlock Text="Улица" />
        <TextBox Name="Street" Margin="0,0,0,10" />

        <TextBlock Text="Номер дома" />
        <TextBox Name="HouseNumber" Margin="0,0,0,10" />

        <TextBlock Text="Номер квартиры (опционально)" />
        <TextBox Name="ApartmentNumber" Margin="0,0,0,20" />

        <Button Content="Назад" Click="BackPage" Margin="0,0,0,10" />
        <Button Content="Отправить" Click="SubmitForm" />
        </StackPanel>
</Page>
